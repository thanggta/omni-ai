# ===== REQUIRED API KEYS =====
# Twitter API (twitterapi.io) - Required for social sentiment analysis
TWITTER_API_KEY=your_twitter_api_key_here

# OpenAI API - Required for AI chat and analysis
OPENAI_API_KEY=your_openai_api_key_here

# ===== OPTIONAL API KEYS =====
# X.AI (Grok) API - Alternative AI provider (has fallback key configured)
XAI_API_KEY=your_xai_api_key_here

# Grok AI API - Alternative configuration
GROK_API_KEY=your_grok_api_key_here
GROK_BASE_URL=https://api.x.ai/v1

# CoinGecko API - Optional, has free tier for market data
COINGECKO_API_KEY=your_coingecko_api_key_here

# ===== AI CONFIGURATION =====
# OpenAI Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ===== APPLICATION CONFIGURATION =====
# API Base URL
API_BASE_URL=http://localhost:3000/api

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===== SUI NETWORK CONFIGURATION =====
SUI_RPC_URL=https://fullnode.mainnet.sui.io:443
SUI_NETWORK=mainnet

# ===== SECURITY & AUTH =====
# NextAuth Configuration (if using authentication)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ===== RATE LIMITING =====
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===== OPTIONAL SERVICES =====
# Database (if needed later)
# DATABASE_URL=your_database_url_here

# Monitoring and Analytics
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_ID=your_analytics_id_here
